<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. SEO: Forzar HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

  # 2. SEO: Forzar SIN-WWW (Alineado con Google Search Console)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

  # 3. Eliminar .html de la URL (URLs Limpias)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}\.html -f
  RewriteRule ^(.*)$ $1.html [NC,L]

</IfModule>

# --- OPTIMIZACIÓN DE RENDIMIENTO ---

# 1. Compresión Gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json application/xml font/woff font/woff2 font/ttf image/svg+xml
</IfModule>

# 2. Caché del Navegador (Expires Headers)
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Imágenes (1 año)
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # Videos y Audio (1 año)
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/mpeg "access plus 1 year"
  ExpiresByType video/quicktime "access plus 1 year"

  # CSS y JS (1 año - El cache busting por hash en build.js nos protege)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"

  # Fuentes (1 año)
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"

  # HTML (Sin caché para asegurar actualizaciones de contenido)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# 3. Cache-Control Adicional
<IfModule mod_headers.c>
  <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|webp|mp4)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>
