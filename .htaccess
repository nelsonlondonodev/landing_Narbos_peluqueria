<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. SEO: Forzar HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

  # 2. SEO: Forzar SIN-WWW (Alineado con Google Search Console)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

  # El resto se maneja por defecto: Si el archivo (index.html, blog/, etc) existe, se muestra.
</IfModule>
